{% extends 'base.html.twig' %}

{% block main %}

    <div class="table" style="overflow-x:auto;">
        <table>
            <tr>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Temps</th>
                <th>Resultat</th>
            </tr>

    {% for result in athletes %}
                <tr>
                    <td>{{ result.athlete.firstname }}</td>
                    <td>{{ result.athlete.lastname }}</td>
                    <td>{{ result.time }}</td>
                    <td>{{ result.points }}</td>
                </tr>
    {% endfor %}
        </table>
    </div>


{% endblock %}